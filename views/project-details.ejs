<!-- views/project-details.ejs -->
<!DOCTYPE html>
<html>

<head>
    <title>Project Details</title>
    <link rel="stylesheet" type="text/css" href="/projectDetails.css">
</head>

<body>
    <header>
        <h1>Project Details</h1>
        <a id="back" href="/">Back to Home</a>
    </header>

    <section class="project-details">
        <h2>
            <%= project.name %>
        </h2>
        <p>Description: <%= project.description %>
        </p>
        <p>Author: <%= project.author %>
        </p>

        <h3>Issues:</h3>
        <ul>
            <% issues.forEach(issue=> { %>
                <li>
                    <!-- <a href="/issues/<%= issue._id %>"> -->
                    <h4>
                        <%= issue.title %>
                            </a>
                    </h4>
                    <p>Description: <%= issue.description %>
                    </p>
                    <p>Author: <%= issue.author %>
                    </p>
                    <p>Labels: <%= issue.labels.join(', ') %></p>
        </li>
      <% }); %>
    </ul>
    
    <a href="/issues/new/<%= project._id %>">Create New Issue</a>
  </section>
  
</body>
</html>